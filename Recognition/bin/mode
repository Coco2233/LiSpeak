#!/bin/bash

#
# Usage: mode [<new_mode>]
# Change modes.
# If omitted change to "main"
#

if [ -z "$1" ];then
    1="main" # Default mode is main
fi

read mode < MODE

echo "$1" > "$HOME/.lispeak/MODE"

if [ "$1" != "$mode" ];then # we changed modes
    ./Recognition/bin/result "Mode Changed" "You are now in '$1' mode." ""
fi

